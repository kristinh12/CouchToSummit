<!DOCTYPE html>
<html>
  <head>

    <title>CouchToSummit</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>

    <div id="flex-content-container">
      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <%= link_to 'CouchToSummit', root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <%= link_to 'Goal Dashboard', dashboard_path, class: 'nav-link' %>
            </li>
            <li class="nav-item active">
              <%= link_to 'Hikes', trails_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item active">
                <%= link_to 'Sign-Out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to 'Sign-In', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to 'Sign-Up', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <%= link_to 'Hikes', trails_path %>
            <br />
            <%= link_to 'Goal Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <%= link_to 'About', '#' %>
            <br />
            <%= link_to 'Privacy Policy', '#' %>
          </div>
          <div class="col-12 col-sm-3">
            <u>Contact</u>
            <br />
            kristin.heininger21@gmail.com
            <br />
            Battle Ground, WA 98604
          </div>
          <div class="col-12 col-sm-3">
            <u>Social</u>
            <br />
            <%= link_to 'https://github.com/kristinh12' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.linkedin.com/in/kristin-heininger-a46962139/' do %>
              <span class="fa fa-linkedin-square fa-2x social-button"></span>
            <% end %>
            <%= link_to 'https://www.facebook.com/kristin.heininger.79' do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
